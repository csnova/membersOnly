extends layout

block content
    h1=title

    if !user
        p In order to create a message you must be signed in!
        a(href='/board/user/sign-in') Sign In

    else
        form(method='POST')
            div.form-group
                label(for='title') Title:
                input#title.form-control(type='text' placeholder='Message Title' name='title' required)
            div.form-group
                label(for='text') Message text:
                input#text.form-control(class='largeInput' type='text' placeholder='Message Text' name='text' required)
            button.btn.btn-primary(type='submit') Submit

    if errors
        ul
            for error in errors
                li!= error.msg
