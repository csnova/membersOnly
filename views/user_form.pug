extends layout

block content
    h1=title

    form(method='POST')
        div.form-group
            label(for='username') Username:
            input#username.form-control(type='text' placeholder='Username (asmith22)' name='username' required value=(undefined===user ? '' : user.username) )
        div.form-group
            label(for='password') Password:
            input#password.form-control(type='password' placeholder='Must be 8 characters long' name='password' required value=(undefined===user ? '' : user.password) )
        button.btn.btn-primary(type='submit') Submit

    if errors
        ul
            for error in errors
                li!= error.msg
